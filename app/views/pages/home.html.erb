<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<style type="text/css" >
	body {
		background: url("/assets/bgimg.png");
		font-family: Futura, Segoe UI, Helvetica;
		color: #888888;
		text-align:center;
	}

	.container {
		padding:0;
		margin:auto;
	}

	#loginstyle {
		margin-top:100px;
		width:300px;
		height:313px;
		background:url("/assets/loginbg.png") no-repeat;
		text-align:center;
	}

	#ieco {
		display:block;
		padding-top:10;
		margin-top:0;
		width:300;
		height:56;
		background:url("/assets/loginpanel.png") no-repeat;
		text-align:center;
		font-weight:bold;
		font-size:25;
		color:white;
	}

	.formlabel {
		font-weight:bold;
		font-size:20;
		color:white;
	}

	#uname {
		display:block;
		margin-top:30;
		background:url("/assets/user.png") no-repeat;
		width:262;
		height:39;
	}

	#upass {
		display:block;
		margin-top:30;
		background:url("/assets/pass.png") no-repeat;
		width:262;
		height:39;
	}

	#loginb {
		display:block;
		margin-top:30px;
		margin-left:0;
		width:300px;
		padding-left:120px;
	}

	#btnbg {
		width:98px;
		height:36px;
		border:none;
		background:url("/assets/login.png") no-repeat;
		font-family:'宋体';
		font-weight:bold;
		font-size:16;
		color:white;
	}

	#loginbottom {
		display:block;
		margin-top:20;
		padding-bottom:0;
		width:300;
		height:53;
		background:url("/assets/loginbottom.png") no-repeat;
		font-weight:bold;
		font-size:20;
		color:white;
	}

	.space {
		float:none;
	}

	.insty {
		font-weight:bold;
		margin-left:20;
		width:200;
		border:none;
		background-color:#201f1f;
		color:white;
	}

	

	</style>
</head>

<body>
	<div class="container">
		<div id="loginstyle">
			<span id="ieco">IE course</span>
			<br/>

			<form action="search" method="get">
				<span id="uname" class="formlabel"><label></label>
					<input type="text" name="name" class="insty" required></input>
				</span>
			
				<span id="upass" class="formlabel"><label></label>
					<input type="password" class="insty" name="password"></input>
				</span>
				
				<span id="loginb" class="buttonstyle"><button id="btnbg" class="btn parkBtn">Login</button></span>
				<div class="space"></div>
				
				<span id="loginbottom"></span>
			</form>
		</div>
	</div>
</body>
	
</html>