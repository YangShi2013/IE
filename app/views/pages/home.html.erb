<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<style type="text/css" >
	body {		
		background: url("/assets/bgimg.png");
		font-family: Futura, Segoe UI, Helvetica;
		color: #888888;
		text-align:center;
	}

	.container {
		padding:0;
		margin:auto;
	}

	#loginstyle {
		margin-top:100px;
		width:300px;
		height:313px;
		background: url("/assets/loginbg.png") no-repeat;
		text-align:center;
	}

	#ieco {
		display:block;
		padding-top:10px;
		margin-top:0px;
		width:300px;
		height:56px;
		background: url("/assets/loginpanel.png") no-repeat;
		text-align:center;
		font-weight:bold;
		font-size:25px;
		color:white;
	}

	.formlabel {
		font-weight:bold;
		font-size:20px;
		color:white;
	}

	#uname {
		display:block;
		margin-top:30px;
		background: url("/assets/user.png") no-repeat;
		width:262px;
		height:39px;
	}

	#upass {
		display:block;
		margin-top:30px;
		background: url("/assets/pass.png") no-repeat;
		width:262px;
		height:39px;
	}

	#loginb {
		display:block;
		margin-top:30px;
		margin-left:0px;
		width:300px;
		padding-left:120px;
	}

	#btnbg {
		width:98px;
		height:36px;
		border:none;
		background: url("/assets/login.png") no-repeat;
		font-family:'宋体';
		font-weight:bold;
		font-size:16px;
		color:white;
	}

	#loginbottom {
		display:block;
		margin-top:20px;
		padding-bottom:0px;
		width:300px;
		height:53px;
		background: url("/assets/loginbottom.png") no-repeat;
		font-weight:bold;
		font-size:20px;
		color:white;
	}

	.space {
		float:none;
	}

	.insty {
		font-weight:bold;
		margin-left:20px;
		width:200px;
		border:none;
		background-color:#201f1f;
		color:white;
	}
	</style>
	</head>

	<body>
		<div class="container">
			<div id="loginstyle">
			<span id="ieco">IE course</span>
			<br/>

			<form action="search" method="get">
				<span id="uname" class="formlabel"><label></label>
				<input type="text" name="name" class="insty" required></input>
				</span>
			
				<span id="upass" class="formlabel"><label></label>
				<input type="password" class="insty" name="password"></input>
				</span>
				
				<span id="loginb" class="buttonstyle"><button id="btnbg" class="btn parkBtn">Login</button></span>
				<div class="space"></div>
				
				<span id="loginbottom"></span>
				<%= image_submit_tag("login.png") %>
			</form>
			</div>
		</div>
	</body>
	</html>
