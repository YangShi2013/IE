<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<script src="http://code.jquery.com/jquery-latest.js"></script>
	<script>
	$(document).ready(function() {
		$('#calendar').fullCalendar({
			header: {
				left: 'prev,next today',
				center: 'title',
				right: 'month,agendaWeek,agendaDay'
			},
			events: 
			[
			{
				title: "11111",
				start: new Date(2013, 6, 9),
				end: new Date(2013, 6, 10)
			}
			]
		});
		
	});
	</script>
</head>
<body>
	<div class="container">	
		<h3><%= @u.name%>的页面</h3>
		
		<div id="broadcast">
			<h4>消息发布</h4>
			<table text:middle class = "table table-striped sortable" data-provides="rowlink">
				<% @broadcast.each do |broadcast| %>
				<tr>
					<td><center><%= broadcast.content %></center></td>
				</tr>
				<% end %>
			</table>
		</div>
	</br>
	<div id='calendar'></div>
	<div>
		<table  vertical-align:middle id="topicTable" class = "table table-striped sortable" data-provides="rowlink">
			<tr>
				<td><b>年</b></td>
				<td><b>月</b></td>
				<td><b>日</b></td>
				<td><b>开始时间</b></td>
				<td><b>结束时间</b></td>
				<td><b>上课人员</b></td>
				<td><b>课程主题</b></td>
				<td><b>课前准备工作</b></td>
				<td><b>课后作业</b></td>
			</tr>
			<% @topic.each do |topic| %>
			<tr>
				<td><%= topic.year %></td>
				<td><%= topic.month %></td>
				<td><%= topic.day %></td>
				<td><%= topic.startTime %></td>
				<td><%= topic.endTime %></td>
				<td><%= topic.people %></td>
				<td><%= topic.theme %></td>
				<td><%= topic.preparation %></td>
				<td><%= topic.homework %></td>
			</tr>
			<% end %>
		</table>
	</div>
	<button class="btn parkBtn" id="checkClassTime">查看上课情况</button>
	<div>
		<table style="display:none" id="classTimeTable" class = "table table-striped sortable" data-provides="rowlink">
			<tr>
				<td><b>共有课时</b></td>
				<td><b>已上课时</b></td>
				<td><b>剩余课时</b></td>
				<td><b>现有VIP课时</b></td>
				<td><b>赠送VIP课时</b></td>
				<td><b>已上VIP课时</b></td>
				<td><b>上次上课时间</b></td>
				<td><b>课程有效期</b></td>
			</tr>
			<td><%= @classTime.totalTime %></td>
			<td><%= @classTime.takenTime %></td>
			<td><%= @classTime.balance %></td>
			<td><%= @classTime.VIPbalance %></td>
			<td><%= @classTime.givenVIPtime %></td>
			<td><%= @classTime.takenVIPTime %></td>
			<td><%= @classTime.lastClass %></td>
			<td><%= @classTime.validDate %></td>
		</tr>
	</table>
</div>
<button class="btn parkBtn" id="checkUser">查看个人信息</button>
<div>
	<table style="display:none" id="userTable" class = "table table-striped sortable" data-provides="rowlink">
		<tr>
			<td><b>姓名</b></td>
			<td><b>密码</b></td>
			<td><b>生日</b></td>
			<td><b>手机号</b></td>
			<td><b>家庭电话</b></td>
			<td><b>所在俱乐部</b></td>
			<td><b>Email</b></td>
			<td><b>地址</b></td>
			<td><b>籍贯</b></td>
			<td><b>QQ</b></td>
			<td><b>MSN</b></td>
			<td><b>目前所在地</b></td>
			<td><b>现阶段状态</b></td>
		</tr>
		<td><%= @u.name %></td>
		<td><%= @u.password %></td>
		<td><%= @u.birth %></td>
		<td><%= @u.cellNum %></td>
		<td><%= @u.homeNum %></td>
		<td><%= @u.club %></td>
		<td><%= @u.email %></td>
		<td><%= @u.address %></td>
		<td><%= @u.from %></td>
		<td><%= @u.qq %></td>
		<td><%= @u.MSN %></td>
		<td><%= @u.location %></td>
		<td><%= @u.condition %></td>
	</tr>
</table>
</div>

<script>
$('#checkClassTime').click(function() {
$('#classTimeTable').toggle();
});
$('#checkUser').click(function() {
$('#userTable').toggle();
});
</script>
</div>
</body>
</html>
