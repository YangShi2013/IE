<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<script src="http://code.jquery.com/jquery-latest.js"></script>
	<style type="text/css">
	body { background-color: #ecf9f9;
		font-family: Futura, Segoe UI, Helvetica;
		color: #888888;}
		.container {
			margin-left:auto;
			margin-right:auto;
			background-color: #ffffff;
		}
		</style>
		<script>
		$(document).ready(function() {
			$('#calendar').fullCalendar({
				header: {
					left: 'prev,next today',
					center: 'title',
					right: 'month,agendaWeek,agendaDay'
				},
				events: 
				[
				{
					title: "11111",
					start: new Date(2013, 6, 9),
					end: new Date(2013, 6, 10)
				}
				]
			});
		
		});
		</script>
		<style>

		body {
			margin-top: 40px;
			text-align: center;
			font-size: 14px;
			font-family: "Lucida Grande",Helvetica,Arial,Verdana,sans-serif;
		}

		#calendar {
			width: 900px;
			margin: 0 auto;
		}

		</style>
	</head>
	<body>
		<div class="container">	
			<h3><%= @u.name%>的页面</h3>
		
			<div id="broadcast">
				<h5>消息发布</h5>
				<% @broadcast.each do |broadcast| %>
				<%= broadcast.content %>
				<% end %>
			</div>
		</br>
		<div id='calendar'></div>
		<div>
			<table margin-left:auto; margin-right:auto; id="topicTable" class = "table table-striped sortable" data-provides="rowlink">
				<tr>
					<td><b>年</b></td>
					<td><b>月</b></td>
					<td><b>日</b></td>
					<td><b>开始时间</b></td>
					<td><b>结束时间</b></td>
					<td><b>上课人员</b></td>
					<td><b>课程主题</b></td>
					<td><b>课前准备工作</b></td>
					<td><b>课后作业</b></td>
				</tr>
				<% @topic.each do |topic| %>
				<tr>
					<td><%= topic.year %></td>
					<td><%= topic.month %></td>
					<td><%= topic.day %></td>
					<td><%= topic.startTime %></td>
					<td><%= topic.endTime %></td>
					<td><%= topic.people %></td>
					<td><%= topic.theme %></td>
					<td><%= topic.preparation %></td>
					<td><%= topic.homework %></td>
				</tr>
				<% end %>
			</table>
		</div>
		<button class="btn parkBtn" id="checkClassTime">查看上课情况</button>
		<div>
			<table margin-left:auto;margin-right:auto; style="display:none" id="classTimeTable" class = "table table-striped sortable" data-provides="rowlink">
				<tr>
					<td><b>共有课时</b></td>
					<td><b>已上课时</b></td>
					<td><b>剩余课时</b></td>
					<td><b>现有VIP课时</b></td>
					<td><b>已上VIP课时</b></td>
					<td><b>上次上课时间</b></td>
					<td><b>课程有效期</b></td>
				</tr>
				<td><%= @classTime.totalTime %></td>
				<td><%= @classTime.takenTime %></td>
				<td><%= @classTime.balance %></td>
				<td><%= @classTime.VIPbalance %></td>
				<td><%= @classTime.takenVIPTime %></td>
				<td><%= @classTime.lastClass %></td>
				<td><%= @classTime.validDate %></td>
			</tr>
		</table>
	</div>
	<script>
	$('#checkClassTime').click(function() {
		$('#classTimeTable').toggle();
	});
	</script>
</div>
</body>
</html>
